<script type="application/javascript">
    $(function() {
        var index = 1000;
        {foreach $flashes as $flash}
        window.setTimeout(function() {
            $.bootstrapPurr({$flash->message}, {
                type: {$flash->type},
                align: 'left',
                allowDismiss: false,
                width: 270,
                offset: {
                    from: 'bottom'
                }
            });
        }, index);
        index += 250;
        {/foreach}
    });
</script>
</body>
